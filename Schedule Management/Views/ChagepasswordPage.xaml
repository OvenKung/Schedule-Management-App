<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schedule_Management.Views.ChagepasswordPage"
             Title="Change Password"
             BackgroundColor="#e6f2ff">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">
            <!-- Header Section -->
            <Frame BackgroundColor="#f0f8ff" CornerRadius="15" Padding="20" HasShadow="True" Margin="0,10,0,20">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Change Password" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="#2c5282" 
                           HorizontalOptions="Center"/>
                    <Label Text="Create a strong password for your account" 
                           FontSize="14" 
                           TextColor="#4a6fa5" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Current Password Field -->
            <Frame BorderColor="Transparent" 
                   BackgroundColor="#f0f8ff" 
                   CornerRadius="12" 
                   HasShadow="True"
                   Padding="15,5">
                <VerticalStackLayout>
                    <Label Text="Current Password" FontSize="14" TextColor="#4a6fa5"/>
                    <Entry x:Name="OldPasswordEntry"
                           Placeholder="Enter your current password"
                           PlaceholderColor="#b9d7ff"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#2c5282"/>
                </VerticalStackLayout>
            </Frame>

            <!-- New Password Field -->
            <Frame BorderColor="Transparent" 
                   BackgroundColor="#f0f8ff" 
                   CornerRadius="12" 
                   HasShadow="True"
                   Padding="15,5">
                <VerticalStackLayout>
                    <Label Text="New Password" FontSize="14" TextColor="#4a6fa5"/>
                    <Entry x:Name="NewPasswordEntry"
                           Placeholder="Enter your new password"
                           PlaceholderColor="#b9d7ff"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#2c5282"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Confirm Password Field -->
            <Frame BorderColor="Transparent" 
                   BackgroundColor="#f0f8ff" 
                   CornerRadius="12" 
                   HasShadow="True"
                   Padding="15,5">
                <VerticalStackLayout>
                    <Label Text="Confirm New Password" FontSize="14" TextColor="#4a6fa5"/>
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm your new password"
                           PlaceholderColor="#b9d7ff"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#2c5282"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="MessageLabel"
                   Text=""
                   TextColor="#dc3545"
                   FontSize="14"
                   HorizontalOptions="Center"
                   Margin="0,5,0,10"/>

            <!-- Submit Button -->
            <Button Text="UPDATE PASSWORD"
                    Clicked="OnChangePasswordClicked"
                    BackgroundColor="#5588c7"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,0"/>

            <!-- Password Guidelines -->
            <Frame BackgroundColor="#e2eeff" 
                   BorderColor="#b9d7ff"
                   CornerRadius="12" 
                   HasShadow="False" 
                   Padding="15" 
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Password Guidelines" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="#2c5282"/>
                    <Label Text="• At least 8 characters long" 
                           FontSize="14" 
                           TextColor="#4a6fa5"/>
                    <Label Text="• Include uppercase and lowercase letters" 
                           FontSize="14" 
                           TextColor="#4a6fa5"/>
                    <Label Text="• Include at least one number" 
                           FontSize="14" 
                           TextColor="#4a6fa5"/>
                    <Label Text="• Include at least one special character" 
                           FontSize="14" 
                           TextColor="#4a6fa5"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>