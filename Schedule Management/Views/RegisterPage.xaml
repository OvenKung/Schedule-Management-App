<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Schedule_Management.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register"
    BackgroundColor="#e6f2ff">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">
            <!--  Header Section  -->
            <Frame
                Margin="0,10,0,20"
                Padding="20"
                BackgroundColor="#f0f8ff"
                CornerRadius="15"
                HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalOptions="Center"
                        Text="Create Account"
                        TextColor="#2c5282" />
                    <Label
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Please fill in your information to register"
                        TextColor="#4a6fa5" />
                </VerticalStackLayout>
            </Frame>

            <!--  Registration Form  -->
            <Frame
                Padding="15,5"
                BackgroundColor="#f0f8ff"
                BorderColor="Transparent"
                CornerRadius="12"
                HasShadow="True">
                <VerticalStackLayout>
                    <Label
                        FontSize="14"
                        Text="Email"
                        TextColor="#4a6fa5" />
                    <Entry
                        x:Name="EmailEntry"
                        FontSize="16"
                        Keyboard="Email"
                        Placeholder="Enter your email"
                        PlaceholderColor="#b9d7ff"
                        TextColor="#2c5282" />
                </VerticalStackLayout>
            </Frame>

            <Frame
                Padding="15,5"
                BackgroundColor="#f0f8ff"
                BorderColor="Transparent"
                CornerRadius="12"
                HasShadow="True">
                <VerticalStackLayout>
                    <Label
                        FontSize="14"
                        Text="Full Name"
                        TextColor="#4a6fa5" />
                    <Entry
                        x:Name="FullnameEntry"
                        FontSize="16"
                        Placeholder="Enter your full name"
                        PlaceholderColor="#b9d7ff"
                        TextColor="#2c5282" />
                </VerticalStackLayout>
            </Frame>

            <Frame
                Padding="15,5"
                BackgroundColor="#f0f8ff"
                BorderColor="Transparent"
                CornerRadius="12"
                HasShadow="True">
                <VerticalStackLayout>
                    <Label
                        FontSize="14"
                        Text="Password"
                        TextColor="#4a6fa5" />
                    <Entry
                        x:Name="PasswordEntry"
                        FontSize="16"
                        IsPassword="True"
                        Placeholder="Create a password"
                        PlaceholderColor="#b9d7ff"
                        TextColor="#2c5282" />
                </VerticalStackLayout>
            </Frame>

            <Frame
                Padding="15,5"
                BackgroundColor="#f0f8ff"
                BorderColor="Transparent"
                CornerRadius="12"
                HasShadow="True">
                <VerticalStackLayout>
                    <Label
                        FontSize="14"
                        Text="Confirm Password"
                        TextColor="#4a6fa5" />
                    <Entry
                        x:Name="ConfirmPasswordEntry"
                        FontSize="16"
                        IsPassword="True"
                        Placeholder="Confirm your password"
                        PlaceholderColor="#b9d7ff"
                        TextColor="#2c5282" />
                </VerticalStackLayout>
            </Frame>

            <Frame
                Padding="15,5"
                BackgroundColor="#f0f8ff"
                BorderColor="Transparent"
                CornerRadius="12"
                HasShadow="True">
                <VerticalStackLayout>
                    <Label
                        FontSize="14"
                        Text="Profile Image URL"
                        TextColor="#4a6fa5" />
                    <Entry
                        x:Name="ImageUrlEntry"
                        FontSize="16"
                        Keyboard="Url"
                        Placeholder="https://example.com/avatar.jpg"
                        PlaceholderColor="#b9d7ff"
                        TextColor="#2c5282" />
                </VerticalStackLayout>
            </Frame>

            <!--  Error Message Label  -->
            <Label
                x:Name="ErrorMessageLabel"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="false"
                Text=""
                TextColor="#dc3545" />

            <!--  Registration Button  -->
            <Button
                Margin="0,10,0,20"
                BackgroundColor="#5588c7"
                Clicked="OnRegisterClicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="50"
                Text="CREATE ACCOUNT"
                TextColor="White" />

            <!--  Password Guidelines  -->
            <Frame
                Margin="0,10,0,0"
                Padding="15"
                BackgroundColor="#e2eeff"
                BorderColor="#b9d7ff"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Password Guidelines"
                        TextColor="#2c5282" />
                    <Label
                        FontSize="14"
                        Text="• At least 8 characters long"
                        TextColor="#4a6fa5" />
                    <Label
                        FontSize="14"
                        Text="• Include uppercase and lowercase letters"
                        TextColor="#4a6fa5" />
                    <Label
                        FontSize="14"
                        Text="• Include at least one number"
                        TextColor="#4a6fa5" />
                    <Label
                        FontSize="14"
                        Text="• Include at least one special character"
                        TextColor="#4a6fa5" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>